                                                <TextBlock VerticalAlignment="Center" Margin="25,0,0,0" Text="{Binding PubTime}" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" HorizontalTextAlignment="Left"/>
                                            </Grid>
                                        </GridView>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
